<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/str_add_edit_diary_garbage"
    tools:context=".addeditdiary.AddEditFragment">

    <ImageView
        android:id="@+id/delete_diary_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_margin="@dimen/margin_eight"
        android:contentDescription="@string/str_add_edit_diary_garbage"
        android:src="@drawable/ic_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/save_diary_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_eight"
        android:contentDescription="@string/str_add_edit_save_diary"
        android:src="@drawable/ic_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_diary_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/delete_diary_image_view"/>

    <EditText
        android:id="@+id/diary_edit_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_eight"
        android:background="@drawable/edit_text_background"
        android:gravity="top"
        android:hint="@string/str_add_edit_diary"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="@dimen/padding_eight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_diary_image_view" />
</androidx.constraintlayout.widget.ConstraintLayout>